                <li class="navitem navlink" id="top-navbar-item"><a href="/assignments">Assignments</a></li>
            </ul>
        </nav>
    </header>

    <main class="big-container">


        <article class="container" id="container">
            <h2>Add Payment</h2>
            <form id="addpayment" action="/payments" method="post">
                Customer ID: <input type="text" name="customerID"><br>
                Date: <input type="text" name="date"><br>
                Amount: <input type="text" name="amount"><br>
                <input type="submit" value="Submit">
            </form>
        </article>

        <article class="container" id="container">
            <h2>Payments</h2>
            <input type="text" placeholder="Filter by Customer ID">
            <button type="button" id="search-button">Search</button>
            <input type="text" placeholder="Filter by first name">
            <button type="button" id="search-button">Search</button>
            <input type="text" placeholder="Filter by last name">
            <button type="button" id="search-button">Search</button><br>

            <table style="width:100%" id="display-table">
                <thead>
                    <th>Customer ID</th>
                    <th>paymentNum</th>
                    <th>Date</th>
                    <th>Amount</th>
                </thead>
                <tbody>
                    {{#each payments}}
                    <tr>
                        <td>{{customerID}}</td>
                        <td>{{paymentNum}}</td>
                        <td>{{paymentDate}}</td>
                        <td>{{amount}}</td>
                        <td><a href="/payments/{{paymentNum}}">Update</a></td>
                        <!-- <td><button onclick="deletePayment({{paymentNum}})">Delete</td> -->
                    </tr>
                    {{/each}}
                </tbody>
            </table>

    </article>

    </main>


</body>

