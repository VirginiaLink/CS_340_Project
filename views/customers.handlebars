        </article>

        <article class="container" id="container">
            <h2>Customers</h2>
            <input type="text" placeholder="Filter by Customer ID">
            <button type="button" id="search-button">Search</button>
            <input type="text" placeholder="Filter by first name">
            <button type="button" id="search-button">Search</button>
            <input type="text" placeholder="Filter by last name">
            <button type="button" id="search-button">Search</button><br>

        <table style="width:100%" id="display-table">
            <thead>
                <th>Customer ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Address Line 1</th>
                <th>Address Line 2</th>
                <th>City</th>
                <th>State</th>
                <th>Zip Code</th>
                <th>Current Bill</th>
            </thead>
            <tbody>
                {{#each customers}}
                <tr>
                    <td>{{customerID}}</td>
                    <td>{{firstName}}</td>
                    <td>{{lastName}}</td>
                    <td>{{phone}}</td>
                    <td>{{addressLine1}}</td>
                    <td>{{addressLine2}}</td>
                    <td>{{city}}</td>
                    <td>{{state}}</td>
                    <td>{{zip}}</td>
                    <td>{{currentBill}}</td>
                </tr>
                {{/each}}
            </tbody>
